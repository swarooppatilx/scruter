        color: #555;
        max-width: 700px;
        margin: 0 auto;
        font-size: 1.1rem;
    }

    section {
        margin-top: 2rem;
    }

    section h2 {
        font-size: 1.8rem;
        color: #333;
        display: flex;
        align-items: center;
        border-left: 4px solid #2563eb;
        padding-left: 8px;
        margin-bottom: 1rem;
    }

