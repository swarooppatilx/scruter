        color: #6f42c1;
    }

    section p {
        font-size: 1rem;
        line-height: 1.8;
        color: #444;
        text-align: justify;
    }

    /* Sidebar styles */
    .sidebar {
        width: 25%;
        background: linear-gradient(to bottom, #007bff, #6f42c1);
        color: #fff;
        padding: 20px;
        position: sticky;
        top: 0;
        height: 100vh;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar ul li {
        margin-bottom: 15px;
    }

    .sidebar ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 1rem;
        display: flex;
        align-items: center;
        padding: 8px;
        transition: color 0.2s;
    }

    .sidebar ul li a:hover {
        color: #e0e0e0;
    }

    .sidebar ul li a i {
        margin-right: 8px;
    }

    @media (max-width: 768px) {
        .main-content {
            width: 100%;
            padding: 1rem;
        }

        .sidebar {
            display: none;
        }
    }
        </style>
</head>

