  color: #fff;
  border: none;
  padding: 15px;
  cursor: pointer;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  display: none;
  transition: transform 0.3s ease, background-color 0.3s ease;
}

.scroll-button.show-btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll-button:hover {
  background-color: rgba(34, 34, 34, 1); /* Slightly darker on hover */
  transform: scale(1.1) rotate(-365deg); /* Rotation effect */
}

.scroll-button svg path {
  transition: fill 0.2s ease;
}

.scroll-button:hover svg path {
  fill: #dddddd; /* Light color for arrow on hover */
}

