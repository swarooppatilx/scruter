<!doctype html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>

    <style>
        /* Privacy Policy container styling */
        body {
            background-color: #eef2f3; /* Light background for contrast */
            font-family: 'Arial', sans-serif;
        }
        
        .privacy-policy-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #ffffff; /* White background for the container */
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            color: #333;
        }

        /* Header styling */
        .privacy-policy-container h1 {
            text-align: center;
            font-size: 2.5rem;
            color: #007BFF; /* Change header color for better visibility */
            margin-bottom: 1.5rem;
        }

        /* Section titles */
        .privacy-policy-container h2 {
            font-size: 1.8rem;
            color: #0056b3; /* Darker shade for section titles */
            margin-top: 1.5rem;
            border-bottom: 2px solid #007BFF;
            padding-bottom: 0.5rem;
        }

        /* Paragraph styling */
        .privacy-policy-container p {
            line-height: 1.7; /* Increased line-height for better readability */
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        /* List styling */
        .privacy-policy-container ul {
            list-style-type: none;
            padding: 0;
            margin-left: 1rem;
        }

        .privacy-policy-container ul li {
            margin-bottom: 0.5rem;
            padding-left: 1.5rem; /* Increased padding for bullets */
            position: relative;
            font-size: 1rem;


        .button:hover {
            background-color: #3b82f6;
            text-decoration: none;

        }
        .privacy-policy-container ul li:before {
            content: "â€¢";
            color: #007BFF;
            font-size: 1.5rem; /* Larger bullet point */
            position: absolute;
            left: 0;
        }

        /* Strong text */
        .privacy-policy-container strong {
            color: #333;
        }

        /* Contact information styling */
        .privacy-policy-container ul li:last-child {
            font-style: italic;
        }

        /* Media Queries for responsiveness */
        @media (max-width: 600px) {
            .privacy-policy-container {
                padding: 1rem; /* Reduce padding on smaller screens */
            }
            .privacy-policy-container h1 {
                font-size: 2rem; /* Smaller header on small screens */
            }
            .privacy-policy-container h2 {
                font-size: 1.5rem; /* Smaller section titles */
            }
        }


        /* Dark mode styles */
        body.dark-mode {
            background-color: #1f2937;
            color: #f9fafb;
        }

        body.dark-mode .card {
            background-color: #2d3748;
            color: #f9fafb;
        }

        body.dark-mode .button {
            background-color: #4f46e5;
            color: #ffff;
        }

        body.dark-mode .button:hover {
            background-color: #4338ca;
        }

        body.dark-mode a {
            color: #3b82f6;
        }

        body.dark-mode h1,
        body.dark-mode h2,
        body.dark-mode h3 {
            color: #bbf7d0; /* Light color for headings in dark mode */
        }

        .welcome-message {
            padding: 1rem;
            border-radius: 0.5rem;
            background-color: #dbeafe;
            margin-bottom: 2rem;
        }

        body.dark-mode .welcome-message {
            background-color: #4b5563;
            color: #f9fafb;
        }

    </style>
</head>

<body>
    <div id="progress-bar"></div>
