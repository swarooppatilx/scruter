generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid()) @map("_id")
  name         String

  email String @unique
  otp   String?
  role  String  @default("user")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id String @id @default(uuid()) @map("_id")
  name String

  email        String  @unique
  otp          String?
  role         String  @default("Seller")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
